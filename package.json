{
	"name": "eslint-config-sarpik",
	"version": "0.3.0",
	"description": "ESLint, Prettier and TypeScript setup from Kipras",
	"main": "index.js",
	"author": "Kipras Melnikovas <kipras@kipras.org> (https://kipras.org)",
	"repository": "https://github.com/sarpik/eslint-config-sarpik",
	"license": "MIT",
	"private": false,
	"scripts": {
		"lint": "    eslint . --ext js,jsx,ts,tsx --ignore-pattern '!.eslintrc.js'",
		"lint:fix": "eslint . --ext js,jsx,ts,tsx --ignore-pattern '!.eslintrc.js' --fix",
		"prepublishOnly": "yarn lint:fix",
		"postpublish": "   yarn updateGlobal",
		"printDeps": "node -p -e \"Object.entries(require('./package.json').peerDependencies).reduce((accumulator, [key, value]) => accumulator + ' ' + key + '@' + value, '')\"",
		"update": "      yarn        add $(yarn -s printDeps)",
		"updateGlobal": "yarn global add $(yarn -s printDeps)",
		"send-it": "yarn version --patch && npm whoami && npm publish"
	},
	"peerDependencies": {
		"@typescript-eslint/eslint-plugin": "2.34.0",
		"@typescript-eslint/parser": "2.34.0",
		"babel-eslint": "10.1.0",
		"eslint": "5.16.0",
		"eslint-config-airbnb": "18.2.1",
		"eslint-config-prettier": "6.7.0",
		"eslint-plugin-clean-regex": "^0.5.1",
		"eslint-plugin-flowtype": "4.7.0",
		"eslint-plugin-html": "6.2.0",
		"eslint-plugin-import": "2.25.2",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-monorepo": "0.2.1",
		"eslint-plugin-prettier": "3.4.1",
		"eslint-plugin-react": "7.26.1",
		"eslint-plugin-react-hooks": "2.5.1",
		"esprima": "4.0.1",
		"prettier": "1.19.1",
		"typescript": "4.3.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "7.4.0",
		"@typescript-eslint/parser": "7.4.0",
		"babel-eslint": "10.1.0",
		"eslint": "8.57.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-clean-regex": "^0.5.2",
		"eslint-plugin-flowtype": "8.0.3",
		"eslint-plugin-html": "8.0.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-monorepo": "0.3.2",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-react": "7.34.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"esprima": "4.0.1",
		"prettier": "3.2.5",
		"typescript": "5.4.3"
	},
	"keywords": [
		"javascript",
		"ecmascript",
		"eslint",
		"lint",
		"config",
		"prettier",
		"sarpik"
	]
}
